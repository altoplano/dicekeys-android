<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listDiceKeysFragment">

    <fragment
        android:id="@+id/listDiceKeysFragment"
        android:name="org.dicekeys.app.fragments.ListDiceKeysFragment"
        android:label="@string/your_dicekeys"
        tools:layout="@layout/list_dicekeys_fragment">

        <action
            android:id="@+id/action_listDiceKeysFragment_to_diceKeyRootFragment"
            app:destination="@id/mainDiceKeyRootFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainDiceKeyRootFragment"
        android:name="org.dicekeys.app.fragments.MainDiceKeyFragment"
        tools:layout="@layout/main_dicekey_fragment">
        <argument
            android:name="diceKeyId"
            app:argType="string" />
        <action
            android:id="@+id/action_mainDiceKeyRootFragment_to_recipeFragment"
            app:destination="@id/recipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/recipeFragment"
        android:name="org.dicekeys.app.fragments.RecipeFragment"
        tools:layout="@layout/recipe_fragment"
        android:label="">
        <argument
            android:name="diceKeyId"
            app:argType="string" />
        <argument
            android:name="recipe"
            app:argType="org.dicekeys.api.DerivationRecipe" />

    </fragment>
</navigation>